[global/wm]
margin-top = 5
margin-bottom = 5

[colors]
background = #282828
foreground = #b7b8b9
black = ${colors.background}
white = ${colors.foreground}
transparent = #00ffffff
red = #cc241d
green = #98971a
blue = #458588
purple = #b16286
orange = #de935f
yellow = #d79921

[bar/master]
monitor = HDMI-0
width = 100%
height = 35 
separator = " "
background = ${colors.background}
foreground = ${colors.foreground}
underline-size = 5 
overline-size = 5
font-0 = System San Francisco Display:pixelsize=13
font-1 = FontAwesome:pixelsize=13
font-2 = System San Francisco Display:pixelsize=13

[bar/bottom]
inherit = bar/master
bottom = false

modules-left = workspaces
modules-center = title
modules-right = cpu ram time

[module/title]
type = internal/xwindow
label = %title%
label-maxlen = 75

[module/cpu]
type = internal/cpu
interval = 0.5

format-prefix = 
format-prefix-foreground = ${colors.green}
format-underline = ${colors.green}
format-padding = 1

label = %{A:urxvt -e htop &:}%percentage:2%%%{A}
label-padding-left = 1

[module/ram]
type = internal/memory
interval = 3

format-prefix = 
format-prefix-foreground = ${colors.blue}
format-underline = ${colors.blue}
format-padding = 1

label = %{A:urxvt -e htop &:}%percentage_used:2%%%{A}
label-padding-left = 1

[module/workspaces]
type = internal/i3
enable-click = true
enable-scroll = false
strip-wsnumbers = true

ws-icon-0 = 1:web; 
ws-icon-1 = 2:mail;
ws-icon-2 = 3:code;
ws-icon-3 = 4:Generic;
ws-icon-4 = 5:Generic;
ws-icon-5 = 6:Generic;
ws-icon-6 = 7:Generic;
ws-icon-7 = 8:Generic;
ws-icon-8 = 9:Generic;
ws-icon-9 = 10:Generic;
;ws-icon-default = 

label-focused-padding = 1
label-focused-underline = ${colors.red}
;label-focused-foreground = #dd0c0d0e
;label-focused-background = #282828

label-unfocused-padding = 1
label-visible-padding = 1

label-urgent-padding = 1
label-urgent-background = ${colors.red}

[module/time]
type = internal/date
interval = 1 

format-padding = 1
format-prefix = 
format-prefix-foreground = ${colors.purple}
format-underline = ${colors.purple}

date = " %d-%m-%y %H:%M:%S"
;date-alt = "%a, %d %b"
